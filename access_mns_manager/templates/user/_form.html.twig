{{ form_start(form, {'attr': {'id': 'userForm', 'class': 'needs-validation'}}) }}
    <div class="row g-4">
        <!-- Informations personnelles -->
        <div class="col-12">
            <h6 class="text-primary mb-3">
                <i class="bi bi-person"></i>
                Informations personnelles
            </h6>
        </div>
        
        <div class="col-md-6">
            {{ form_row(form.prenom) }}
        </div>
        
        <div class="col-md-6">
            {{ form_row(form.nom) }}
        </div>
        
        <div class="col-md-6">
            {{ form_row(form.email) }}
        </div>
        
        <div class="col-md-6">
            {{ form_row(form.password) }}
        </div>
        
        <div class="col-md-6">
            {{ form_row(form.date_naissance) }}
        </div>
        
        <div class="col-md-6">
            {{ form_row(form.telephone) }}
        </div>
        
        
        <!-- Séparateur -->
        <div class="col-12">
            <hr>
            <h6 class="text-primary mb-3">
                <i class="bi bi-briefcase"></i>
                Informations professionnelles
            </h6>
        </div>
        
        <div class="col-md-6">
            {{ form_row(form.poste) }}
        </div>
        
        <div class="col-md-6">
            {{ form_row(form.jours_semaine_travaille) }}
        </div>
        
        <div class="col-md-6">
            {{ form_row(form.heure_debut) }}
        </div>
        
        <div class="col-md-6">
            {{ form_row(form.horraire) }}
        </div>
        
        <!-- Séparateur -->
        <div class="col-12">
            <hr>
            <h6 class="text-primary mb-3">
                <i class="bi bi-shield-check"></i>
                Permissions et accès
            </h6>
        </div>
        
        <div class="col-12">
            <div class="mb-3">
                {{ form_label(form.roles, 'Rôles') }}
                <div class="row mt-2">
                    {% for role in form.roles %}
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card role-card h-100">
                                <div class="card-body">
                                    <div class="form-check">
                                        {{ form_widget(role, {'attr': {'class': 'form-check-input'}}) }}
                                        <label class="form-check-label w-100" for="{{ role.vars.id }}">
                                            <div class="d-flex align-items-start">
                                                <div class="role-icon me-3">
                                                    {% if 'ROLE_ADMIN' in role.vars.value %}
                                                        <i class="bi bi-shield-fill-check text-primary fs-5"></i>
                                                    {% elseif 'ROLE_MANAGER' in role.vars.value %}
                                                        <i class="bi bi-person-gear text-primary fs-5"></i>
                                                    {% else %}
                                                        <i class="bi bi-person text-primary fs-5"></i>
                                                    {% endif %}
                                                </div>
                                                <div class="flex-grow-1">
                                                    <div class="fw-medium">{{ role.vars.label }}</div>
                                                    <small class="text-muted">
                                                        {% if 'ROLE_ADMIN' in role.vars.value %}
                                                            Accès complet au système
                                                        {% elseif 'ROLE_MANAGER' in role.vars.value %}
                                                            Gestion des utilisateurs et services
                                                        {% else %}
                                                            Accès standard aux fonctionnalités
                                                        {% endif %}
                                                    </small>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>


        {% if form.secondary_services is defined %}
        <div class="col-12">
            <div class="mb-3">
                {{ form_label(form.secondary_services, 'Services secondaires') }}
                <div class="row mt-2">
                    {% for service in form.secondary_services %}
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card service-card h-100">
                                <div class="card-body">
                                    <div class="form-check">
                                        {{ form_widget(service, {'attr': {'class': 'form-check-input'}}) }}
                                        <label class="form-check-label w-100" for="{{ service.vars.id }}">
                                            <div class="d-flex align-items-start">
                                                <div class="service-icon me-3">
                                                    <i class="bi bi-briefcase text-primary fs-5"></i>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <div class="fw-medium">{{ service.vars.label }}</div>
                                                    <small class="text-muted">Service additionnel</small>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}

        {% if form.date_inscription is defined %}
        <div class="col-md-6">
            {{ form_row(form.date_inscription) }}
        </div>
        {% endif %}

        <!-- GDPR Compliance Section for Admins -->
        {% if form.compte_actif is defined or form.date_derniere_connexion is defined or form.date_suppression_prevue is defined %}
        <div class="col-12">
            <hr>
            <h6 class="text-primary mb-3">
                <i class="bi bi-shield-lock"></i>
                Conformité RGPD
            </h6>
        </div>

        {% if form.compte_actif is defined %}
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body">
                    <div class="form-check form-switch">
                        {{ form_widget(form.compte_actif, {'attr': {'class': 'form-check-input', 'role': 'switch'}}) }}
                        <label class="form-check-label" for="{{ form.compte_actif.vars.id }}">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-person-check me-2 text-success"></i>
                                <div>
                                    <div class="fw-medium">{{ form.compte_actif.vars.label }}</div>
                                    <small class="text-muted">Décochez pour désactiver le compte</small>
                                </div>
                            </div>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        {% if form.date_derniere_connexion is defined %}
        <div class="col-md-6">
            {{ form_row(form.date_derniere_connexion) }}
        </div>
        {% endif %}

        {% if form.date_suppression_prevue is defined %}
        <div class="col-md-6">
            {{ form_row(form.date_suppression_prevue) }}
        </div>
        {% endif %}
        {% endif %}
        
        {{ form_rest(form) }}
        
        <!-- Information alert for organisation context -->
        {% if organisation is defined %}
        <div class="col-12">
            <div class="alert alert-info mt-3">
                <i class="bi bi-info-circle"></i>
                <strong>Information:</strong> Cet employé sera automatiquement assigné au service principal de l'organisation {{ organisation.nomOrganisation }}. Vous pouvez également l'assigner à des services secondaires.
            </div>
        </div>
        {% endif %}
        
        <div class="col-12">
            <div class="d-flex justify-content-end gap-2 mt-4">
                <a href="{{ organisation is defined ? path('app_organisation_show', {'id': organisation.id}) : path('app_user_index') }}" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Annuler
                </a>
                <button type="submit" class="btn btn-primary" id="submitBtn">
                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    <i class="bi bi-check-circle"></i> {{ button_label|default('Enregistrer') }}
                </button>
            </div>
        </div>
    </div>
{{ form_end(form) }}

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('userForm');
    const submitBtn = document.getElementById('submitBtn');
    const spinner = submitBtn.querySelector('.spinner-border');
    
    // Form submission with loading state
    form.addEventListener('submit', function(e) {
        // Show loading state
        submitBtn.disabled = true;
        spinner.classList.remove('d-none');
    });
});
</script>

