{% extends 'base.html.twig' %}

{% block title %}Nouveau service - ACCESS MNS MANAGER{% endblock %}

{% block breadcrumb %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}"><i class="bi bi-house-door"></i> Tableau de bord</a></li>
        {% if organisation is defined %}
            <li class="breadcrumb-item"><a href="{{ path('app_organisation_index') }}">Organisations</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_organisation_show', {'id': organisation.id}) }}">{{ organisation.nomOrganisation }}</a></li>
        {% else %}
            <li class="breadcrumb-item"><a href="{{ path('app_service_index') }}">Services</a></li>
        {% endif %}
        <li class="breadcrumb-item active" aria-current="page">Nouveau service</li>
    </ol>
</nav>
{% endblock %}

{% block body %}
<div class="container">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">Nouveau service</h1>
                    <p class="text-muted">
                        {% if organisation is defined %}
                            Créer un nouveau service pour {{ organisation.nomOrganisation }}
                        {% else %}
                            Créer un nouveau service dans le système
                        {% endif %}
                    </p>
                </div>
                <div>
                    <a href="{{ organisation is defined ? path('app_organisation_show', {'id': organisation.id}) : path('app_service_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Flash Messages -->
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                <i class="bi bi-{{ type == 'success' ? 'check-circle' : type == 'error' ? 'exclamation-triangle' : 'info-circle' }}"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Form -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-briefcase"></i>
                        Informations du service
                    </h5>
                </div>
                <div class="card-body">
                    {{ include('service/_form.html.twig', {'button_label': 'Créer le service'}) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
