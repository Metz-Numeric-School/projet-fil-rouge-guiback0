{% extends 'base.html.twig' %}

{% block title %}Zones d'accès - {{ service.nomService }} - ACCESS MNS MANAGER{% endblock %}

{% block breadcrumb %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}"><i class="bi bi-house-door"></i> Tableau de bord</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_organisation_index') }}">Organisations</a></li>
        {% if service.organisation %}
            <li class="breadcrumb-item"><a href="{{ path('app_organisation_show', {'id': service.organisation.id}) }}">{{ service.organisation.nomOrganisation }}</a></li>
        {% endif %}
        <li class="breadcrumb-item"><a href="{{ path('app_service_show', {'id': service.id}) }}">{{ service.nomService }}</a></li>
        <li class="breadcrumb-item active" aria-current="page">Zones d'accès</li>
    </ol>
</nav>
{% endblock %}

{% block body %}
<div class="container">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1 class="h3 mb-1">Zones d'accès - {{ service.nomService }}</h1>
                    <p class="text-muted mb-0">
                        <i class="bi bi-geo-alt"></i> Liste des zones d'accès
                        • {{ zones|length }} zone{{ zones|length > 1 ? 's' : '' }}
                    </p>
                </div>
                <div>
                    <a href="{{ path('app_zone_new', {'service': service.id}) }}" class="btn btn-primary">
                        <i class="bi bi-plus-square"></i> Nouvelle zone
                    </a>
                    <a href="{{ path('app_service_show', {'id': service.id}) }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour au service
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Zones List -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-geo-alt"></i>
                        Zones d'accès ({{ zones|length }})
                    </h5>
                </div>
                {% if zones|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Zone</th>
                                    <th>Description</th>
                                    <th>Capacité</th>
                                    <th>Accès installés</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for serviceZone in zones %}
                                <tr class="clickable-row" data-href="{{ path('app_zone_show', {'id': serviceZone.zone.id}) }}">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="zone-icon me-3">
                                                <i class="bi bi-geo-alt text-info fs-5"></i>
                                            </div>
                                            <div>
                                                <div class="fw-medium">{{ serviceZone.zone.nomZone ?? 'Zone sans nom' }}</div>
                                                <small class="text-muted">ID: {{ serviceZone.zone.id }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        {% if serviceZone.zone.description %}
                                            {{ serviceZone.zone.description }}
                                        {% else %}
                                            <span class="text-muted">Non définie</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if serviceZone.zone.capacite %}
                                            <span class="badge bg-info">{{ serviceZone.zone.capacite }} pers.</span>
                                        {% else %}
                                            <span class="text-muted">Non définie</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-key text-success me-2"></i>
                                            <span>{{ serviceZone.zone.acces|length }} accès</span>
                                        </div>
                                    </td>
                                    <td onclick="event.stopPropagation();">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_zone_show', {'id': serviceZone.zone.id}) }}" class="btn btn-sm btn-primary" title="Voir les détails">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('app_zone_edit', {'id': serviceZone.zone.id}) }}" class="btn btn-sm btn-outline-secondary" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="bi bi-geo-alt text-muted" style="font-size: 4rem;"></i>
                        <h4 class="text-muted mt-3">Aucune zone d'accès</h4>
                        <p class="text-muted">Ce service n'a pas encore de zones d'accès configurées.</p>
                        <a href="{{ path('app_zone_new', {'service': service.id}) }}" class="btn btn-primary">
                            <i class="bi bi-plus-square"></i>
                            Créer la première zone
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
.zone-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: #e1f5fe;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}
.clickable-row {
    cursor: pointer;
    transition: background-color 0.2s ease;
}
.clickable-row:hover {
    background-color: rgba(13, 110, 253, 0.1) !important;
}
</style>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', () => {
    // Make table rows clickable
    document.querySelectorAll('.clickable-row').forEach(row => {
        row.addEventListener('click', (e) => {
            if (e.target.closest('a, button')) {
                return;
            }
            window.location.href = row.dataset.href;
        });
    });
});
</script>
{% endblock %}