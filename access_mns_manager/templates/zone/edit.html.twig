{% extends 'base.html.twig' %}

{% block title %}Edit Zone{% endblock %}

{% block body %}
    <h1>Edit Zone</h1>

    {{ include('zone/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_zone_index') }}">back to list</a>

    {% if zone.nomZone != 'Zone principale' %}
        {{ include('zone/_delete_form.html.twig') }}
    {% else %}
        <div class="alert alert-info">
            <i class="bi bi-shield-lock"></i> La Zone principale ne peut pas être supprimée.
        </div>
    {% endif %}
{% endblock %}
