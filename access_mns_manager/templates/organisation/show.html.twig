{% extends 'base.html.twig' %}

{% block title %}
	{{ organisation.nomOrganisation }}
	- ACCESS MNS MANAGER
{% endblock %}

{% block breadcrumb %}
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_dashboard') }}">
					<i class="bi bi-house-door"></i>
					Tableau de bord</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('app_organisation_index') }}">Organisations</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">{{ organisation.nomOrganisation }}</li>
		</ol>
	</nav>
{% endblock %}

{% block body %}
	<div
		class="container">
		<!-- Page Header -->
		<div class="row mb-4">
			<div class="col-12">
				<div class="d-flex justify-content-between align-items-start">
					<div>
						<h1 class="h3 mb-1">{{ organisation.nomOrganisation }}</h1>
						<p class="text-muted mb-0">
							<i class="bi bi-building"></i>
							Organisation
							{% if organisation.siret %}
								• SIRET:
								{{ organisation.siret }}
							{% endif %}
						</p>
					</div>
					<div>
						<a href="{{ path('app_organisation_edit', {'id': organisation.id}) }}" class="btn btn-outline-primary">
							<i class="bi bi-pencil"></i>
							Modifier
						</a>
						<button type="button" class="btn btn-outline-danger" onclick="confirmDelete({{ organisation.id }}, '{{ organisation.nomOrganisation|e('js') }}', '{{ csrf_token('delete' ~ organisation.id) }}')">
							<i class="bi bi-trash"></i>
							Supprimer
						</button>
						<a href="{{ path('app_organisation_index') }}" class="btn btn-secondary">
							<i class="bi bi-arrow-left"></i>
							Retour
						</a>
					</div>
				</div>
			</div>
		</div>


		<!-- Organisation Details -->
		<div class="row mb-4">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<h5 class="mb-0">
							<i class="bi bi-info-circle"></i>
							Informations détaillées
						</h5>
					</div>
					<div class="card-body">
						<div class="row g-4">
							<div class="col-md-6">
								<h6 class="text-primary mb-3">Contact</h6>
								<div class="mb-3">
									<label class="text-muted small">Email</label>
									<div>
										<i class="bi bi-envelope me-2"></i>
										{{ organisation.email }}</div>
								</div>
								{% if organisation.telephone %}
									<div class="mb-3">
										<label class="text-muted small">Téléphone</label>
										<div>
											<i class="bi bi-telephone me-2"></i>
											{{ organisation.telephone }}</div>
									</div>
								{% endif %}
								{% if organisation.siteWeb %}
									<div class="mb-3">
										<label class="text-muted small">Site web</label>
										<div>
											<i class="bi bi-globe me-2"></i>
											<a href="{{ organisation.siteWeb }}" target="_blank">{{ organisation.siteWeb }}</a>
										</div>
									</div>
								{% endif %}
							</div>
							<div class="col-md-6">
								<h6 class="text-primary mb-3">Informations générales</h6>
								<div class="mb-3">
									<label class="text-muted small">Date de création</label>
									<div>
										<i class="bi bi-calendar me-2"></i>
										{{ organisation.dateCreation|date('d/m/Y') }}</div>
								</div>
								{% if organisation.ca %}
									<div class="mb-3">
										<label class="text-muted small">Chiffre d'affaires</label>
										<div>
											<i class="bi bi-currency-euro me-2"></i>
											{{ organisation.ca|number_format(0, ',', ' ') }}
											€</div>
									</div>
								{% endif %}
								{% if organisation.siret %}
									<div class="mb-3">
										<label class="text-muted small">SIRET</label>
										<div>
											<i class="bi bi-card-text me-2"></i>
											{{ organisation.siret }}</div>
									</div>
								{% endif %}
							</div>
						</div>
						{% if organisation.nomRue %}
							<hr>
							<div class="row">
								<div class="col-12">
									<h6 class="text-primary mb-3">Adresse</h6>
									<div class="d-flex align-items-start">
										<i class="bi bi-geo-alt me-2 mt-1"></i>
										<div>
											{{ organisation.numeroRue ?? '' }}
											{{ organisation.suffixRue ?? '' }}
											{{ organisation.nomRue }}<br>
											{{ organisation.codePostal ?? '' }}
											{{ organisation.ville ?? '' }}<br>
											{% if organisation.pays %}
												{{ organisation.pays }}
											{% endif %}
										</div>
									</div>
								</div>
							</div>
						{% endif %}
					</div>
				</div>
			</div>
		</div>

		<!-- Services Section -->
		<div class="row mb-4">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<div class="d-flex justify-content-between align-items-start flex-wrap">
							<div class="mb-2 mb-md-0">
								<h5 class="mb-0">
									<i class="bi bi-briefcase"></i>
									Services ({{ organisation.services|length }})
								</h5>
								<small class="text-muted">Gérez les services de cette organisation</small>
							</div>
							<div class="d-flex gap-2 flex-wrap">
								<a href="{{ path('app_service_by_organisation', {'id': organisation.id}) }}" class="btn btn-primary">
									<i class="bi bi-list"></i>
									Voir tous les services
								</a>
								<a href="{{ path('app_organisation_service_new', {'id': organisation.id}) }}" class="btn btn-primary">
									<i class="bi bi-plus-circle"></i>
									Nouveau service
								</a>
							</div>
						</div>
					</div>
					{% if organisation.services|length > 0 %}
						<div class="table-responsive">
							<table class="table table-hover">
								<thead>
									<tr>
										<th>Service</th>
										<th>Niveau</th>
										<th>Employés</th>
										<th>Zones d'accès</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tbody>
									{% for service in organisation.services|slice(0, 5) %}
										<tr class="clickable-row" data-href="{{ path('app_service_show', {'id': service.id}) }}">
											<td>
												<div>
													<div class="fw-medium">
														<i class="bi bi-briefcase text-primary me-2"></i>
														{{ service.nomService }}
													</div>
													<small class="text-muted">ID:
														{{ service.id }}</small>
												</div>
											</td>
											<td>
												<span class="badge bg-primary">Niveau
													{{ service.niveauService }}</span>
											</td>
											<td>
												<div class="d-flex align-items-center">
													<i class="bi bi-people text-success me-2"></i>
													<span>{{ service.travail|length }}
														employé{{ service.travail|length > 1 ? 's' : '' }}</span>
												</div>
											</td>
											<td>
												<div class="d-flex align-items-center">
													<i class="bi bi-geo-alt text-info me-2"></i>
													<span>{{ service.serviceZones|length }}
														zone{{ service.serviceZones|length > 1 ? 's' : '' }}</span>
												</div>
											</td>
											<td onclick="event.stopPropagation();">
												<div class="btn-group" role="group">
													<a href="{{ path('app_service_show', {'id': service.id}) }}" class="btn btn-sm btn-primary" title="Voir les détails">
														<i class="bi bi-eye"></i>
													</a>
													<a href="{{ path('app_service_edit', {'id': service.id}) }}" class="btn btn-sm btn-outline-secondary" title="Modifier">
														<i class="bi bi-pencil"></i>
													</a>
												</div>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					{% else %}
						<div class="text-center py-5">
							<i class="bi bi-briefcase text-muted" style="font-size: 4rem;"></i>
							<h4 class="text-muted mt-3">Aucun service</h4>
							<p class="text-muted">Cette organisation n'a pas encore de services configurés.</p>
							<a href="{{ path('app_organisation_service_new', {'id': organisation.id}) }}" class="btn btn-primary">
								<i class="bi bi-plus-circle"></i>
								Créer le premier service
							</a>
						</div>
					{% endif %}
				</div>
			</div>
		</div>

		<!-- Employees Section -->
		<div class="row mb-4">
			<div class="col-12">
				<div class="card">
					{% set users = [] %}
					{% for service in organisation.services %}
						{% for travail in service.travail %}
							{% if travail.utilisateur and travail.utilisateur not in users %}
								{% set users = users|merge([travail.utilisateur]) %}
							{% endif %}
						{% endfor %}
					{% endfor %}

					<div class="card-header">
						<div class="d-flex justify-content-between align-items-start flex-wrap">
							<div class="mb-2 mb-md-0">
								<h5 class="mb-0">
									<i class="bi bi-people"></i>
									Employés ({{ users|length }})
								</h5>
								<small class="text-muted">Personnes travaillant dans cette organisation</small>
							</div>
							<div class="d-flex gap-2 flex-wrap">
								<a href="{{ path('app_user_by_organisation', {'id': organisation.id}) }}" class="btn btn-primary">
									<i class="bi bi-list"></i>
									Voir tous les employés
								</a>
								<a href="{{ path('app_organisation_user_new', {'id': organisation.id}) }}" class="btn btn-primary">
									<i class="bi bi-plus-circle"></i>
									Nouvel employé
								</a>
							</div>
						</div>
					</div>
					{% if users|length > 0 %}
						<div class="table-responsive">
							<table class="table table-hover">
								<thead>
									<tr>
										<th>Employé</th>
										<th>Email</th>
										<th>Poste</th>
										<th>Services</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tbody>
									{% for user in users|slice(0, 5) %}
										<tr class="clickable-row" data-href="{{ path('app_user_show', {'id': user.id}) }}">
											<td>
												<div class="d-flex align-items-center">
													<div class="avatar-circle me-3">
														<i class="bi bi-person fs-5"></i>
													</div>
													<div>
														<div class="fw-medium">{{ user.prenom }}
															{{ user.nom }}</div>
														<small class="text-muted">ID:
															{{ user.id }}</small>
													</div>
												</div>
											</td>
											<td>
												<i class="bi bi-envelope text-muted me-2"></i>
												{{ user.email }}
											</td>
											<td>
												{% if user.poste %}
													<span class="badge bg-secondary">{{ user.poste }}</span>
												{% else %}
													<span class="text-muted">Non défini</span>
												{% endif %}
											</td>
											<td>
												{% set serviceCount = 0 %}
												{% for service in organisation.services %}
													{% for travail in service.travail %}
														{% if travail.utilisateur == user %}
															{% set serviceCount = serviceCount + 1 %}
															{% if travail.isPrincipal %}
																<span class="badge bg-primary me-1 mb-1" title="Service principal">
																	<i class="bi bi-star-fill me-1"></i>
																	{{ service.nomService }}
																</span>
															{% else %}
																<span class="badge bg-secondary me-1 mb-1">{{ service.nomService }}</span>
															{% endif %}
														{% endif %}
													{% endfor %}
												{% endfor %}
												{% if serviceCount == 0 %}
													<span class="text-muted">Aucun service</span>
												{% endif %}
											</td>
											<td onclick="event.stopPropagation();">
												<div class="btn-group" role="group">
													<a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-primary" title="Voir les détails">
														<i class="bi bi-eye"></i>
													</a>
													<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-secondary" title="Modifier">
														<i class="bi bi-pencil"></i>
													</a>
												</div>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					{% else %}
						<div class="text-center py-5">
							<i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
							<h4 class="text-muted mt-3">Aucun employé</h4>
							<p class="text-muted">Cette organisation n'a pas encore d'employés assignés à ses services.</p>
							<a href="{{ path('app_organisation_user_new', {'id': organisation.id}) }}" class="btn btn-primary">
								<i class="bi bi-plus-circle"></i>
								Créer le premier employé
							</a>
						</div>
					{% endif %}
				</div>
			</div>
		</div>

		<!-- Pointages Section -->
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header d-flex justify-content-between align-items-center">
						<div>
							<h5 class="mb-0">
								<i class="bi bi-clock"></i>
								Derniers pointages ({{ recent_pointages is defined ? recent_pointages|length : 0 }})
							</h5>
							<small class="text-muted">Les 5 derniers pointages de cette organisation</small>
						</div>
						<div>
							<a href="{{ path('app_pointage_by_organisation', {'id': organisation.id}) }}" class="btn btn-primary">
								<i class="bi bi-list"></i>
								Voir tous les pointages
							</a>
						</div>
					</div>
					{% if recent_pointages is defined and recent_pointages|length > 0 %}
						<div class="table-responsive">
							<table class="table table-hover">
								<thead>
									<tr>
										<th>Badge</th>
										<th>Utilisateur</th>
										<th>Heure</th>
										<th>Type</th>
									</tr>
								</thead>
								<tbody>
									{% for pointage in recent_pointages|slice(0, 5) %}
										<tr>
											<td>
												{% if pointage.badge %}
													<div>
														<span class="fw-medium">Badge #{{ pointage.badge.numeroBadge }}</span>
														<br><small class="text-muted">{{ pointage.badge.typeBadge }}</small>
													</div>
												{% else %}
													<span class="text-muted">Non défini</span>
												{% endif %}
											</td>
											<td>
												{% set user = null %}
												{% if pointage.badge %}
													{% for userBadge in pointage.badge.userBadges %}
														{% if userBadge.utilisateur and user is null %}
															{% set user = userBadge.utilisateur %}
														{% endif %}
													{% endfor %}
												{% endif %}
												{% if user %}
													<div class="d-flex align-items-center">
														<div class="avatar-circle me-3">
															<i class="bi bi-person fs-6"></i>
														</div>
														<div>
															<div class="fw-medium">{{ user.prenom }}
																{{ user.nom }}</div>
															<small class="text-muted">{{ user.email }}</small>
														</div>
													</div>
												{% else %}
													<span class="text-muted">Utilisateur non trouvé</span>
												{% endif %}
											</td>
											<td>
												<div>
													<div class="fw-medium">{{ pointage.heure ? pointage.heure|date('d/m/Y') : '' }}</div>
													<small class="text-muted">{{ pointage.heure ? pointage.heure|date('H:i:s') : '' }}</small>
												</div>
											</td>
											<td>
												<span class="badge bg-{% if pointage.type == 'entrée' %}primary{% elseif pointage.type == 'sortie' %}warning{% elseif pointage.type == 'refuse' %}danger{% else %}secondary{% endif %}">
													<i class="bi bi-{% if pointage.type == 'entrée' %}box-arrow-in-right{% elseif pointage.type == 'sortie' %}box-arrow-right{% elseif pointage.type == 'refuse' %}x-circle{% else %}question-circle{% endif %} me-1"></i>
													{{ pointage.type|capitalize }}
												</span>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					{% else %}
						<div class="card-body text-center py-5">
							<i class="bi bi-clock text-muted" style="font-size: 4rem;"></i>
							<h4 class="text-muted mt-3">Aucun pointage</h4>
							<p class="text-muted">Cette organisation n'a pas encore de pointages enregistrés.</p>
							<a href="{{ path('app_pointage_by_organisation', {'id': organisation.id}) }}" class="btn btn-primary">
								<i class="bi bi-list"></i>
								Accéder aux pointages
							</a>
						</div>
					{% endif %}
				</div>
			</div>
		</div>


	</div>

	<!-- Delete Confirmation Modal -->
	<div class="modal fade" id="deleteModal" tabindex="-1">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Confirmer la suppression</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
				</div>
				<div class="modal-body">
					<p>Êtes-vous sûr de vouloir supprimer l'organisation
						<strong id="organisationName"></strong>
						?</p>
					<p class="text-danger">
						<small>Cette action est irréversible.</small>
					</p>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
					<form id="deleteForm" method="post" style="display: inline;">
						<input type="hidden" name="_token" id="deleteToken">
						<button type="submit" class="btn btn-danger">Supprimer</button>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block stylesheets %}
	<style>
		.avatar-circle {
			width: 40px;
			height: 40px;
			border-radius: 50%;
			background-color: #e9ecef;
			display: flex;
			align-items: center;
			justify-content: center;
			color: #6c757d;
			flex-shrink: 0;
		}
		.clickable-row {
			cursor: pointer;
			transition: background-color 0.2s ease;
		}
		.clickable-row:hover {
			background-color: rgba(13, 110, 253, 0.1) !important;
		}
	</style>
{% endblock %}

{% block javascripts %}
	<script>
		document.addEventListener('DOMContentLoaded', () => { // Make service table rows clickable
document.querySelectorAll('.clickable-row').forEach(row => {
row.addEventListener('click', (e) => {
if (e.target.closest('a, button')) {
return;
}
window.location.href = row.dataset.href;
});
});
});

function confirmDelete(orgId, orgName, csrfToken) {
document.getElementById('organisationName').textContent = orgName;
document.getElementById('deleteForm').action = `/manager/organisation/${orgId}/delete`;

// Set CSRF token for deletion
document.getElementById('deleteToken').value = csrfToken;
document.getElementById('deleteToken').name = '_token';

new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
	</script>
{% endblock %}
